extends layout

block content
  .main-container
    .cloud-image
        img(src='/images/successCloudNew.svg')
    .content
        .tweet-container
             a(href='http://twitter.com/intent/tweet/?text=I%20just%20created%20a%20new%20Node.js%20Express%20website%20on%20Azure%20using%20Azure%20DevOps%20Project&hashtags=AzureDevOpsProject%2CVSTS%20%40Azure%20%40VSTS')
                img(src='/images/tweetThis.svg')    
        .content-body
            .success-text
                p Success!
            .description 
                p GitHub + Azure Rocks
            .description
                p Your Node.js Express app is up and running on Azure Kubernetes Service (AKS)
    
  .row
    .col-md-4
      h2 Get started right away
      p Clone your code repository and start developing your application on IDE of your choice
      p
        a.btn.btn-default(href='https://help.github.com/en/github/creating-cloning-and-archiving-repositories/cloning-a-repository') Learn more &raquo;
    .col-md-4
      h2 Continuous Delivery
      p View your GitHub Actions workflow on GitHub and customize it as per your needs
      p
        a.btn.btn-default(href='https://github.com/features/actions') Learn more &raquo;
    .col-md-4
      h2 GitHub Actions
      p Learn more about all you can do with GitHub Actions for Azure by visiting the documentation
      p
        a.btn.btn-default(href='https://github.com/azure/actions') Learn more &raquo;
